#!/bin/sh

set -e

case "$1" in
  configure)
    mkdir -p /var/ob/pools /var/ob/pids; chmod 777 /var/ob /var/ob/pools /var/ob/pids
    mkdir -p /etc/oblong; chmod 755 /etc/oblong

    for f in "feld.protein" "screen.protein"
    do
      if [ ! -e "/etc/oblong/$f" ]; then
        echo "Installing $f"
        ln -fs \
          /opt/oblong/g-speak4.5/share/install-data/one-$f \
          /etc/oblong/$f
      fi
    done

    for f in "tiled-config.protein"
    do
      if [ ! -e "/etc/oblong/$f" ]; then
        echo "Installing $f"
        ln -fs \
          /opt/oblong/g-speak4.5/share/install-data/$f \
          /etc/oblong/$f
      fi
    done
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
