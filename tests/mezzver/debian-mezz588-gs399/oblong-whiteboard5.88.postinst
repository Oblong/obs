#!/bin/sh
# postinst script for whiteboard
#
# see: dh_installdeb(1)

set -e
set -x

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

MAJOR=$( lsb_release -sr | cut -d"." -f1 )
MAJOR_WITH_SYSTEMD=15
EOQ=/etc/oblong/quartermaster

create_link ()
{
  rm -f $2 # all init scripts land in /etc/init.d/mz now (16.04 port)
  ln -s $1 $2
}

case "$1" in
    configure)
        # if there is no default _wbipcam.conf, make one
        if [ ! -f ${EOQ}/_wbipcam.conf -a -r ${EOQ}/_wbipcam.arecont ]
        then
          # in case it's a link
          rm -f ${EOQ}/_wbipcam.conf
          cp ${EOQ}/_wbipcam.arecont ${EOQ}/_wbipcam.conf
        fi
        if [ ${MAJOR} -lt ${MAJOR_WITH_SYSTEMD} ]
        then
          # only in 12.04
          # Originally, user settings for wb cameras are saved into
          # /etc/init.d/matloc so it's a separate file, not a symlink.
          # This is not the best solution, but we don't anticipate 
          # changes to matloc from repo after release on 2016/09/21.
          if [ -f /etc/init.d/matloc ] && [ ! -h /etc/init.d/matloc ]; then
            cp -f /etc/init.d/matloc /etc/init.d/wb/matloc
          fi
          for f in fletcher \
                   matloc \
                   whiteboard \
                   marple \
                   qm-provisioner-bm \
                   qm-provisioner-ipcam
          do
            create_link /etc/init.d/wb/$f /etc/init.d/$f
          done
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
